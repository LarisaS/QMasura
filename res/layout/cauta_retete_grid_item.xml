<?xml version="1.0" encoding="utf-8"?>

<com.proiect.qmasura.utilitare.NewGridItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
   >
    
    <com.proiect.qmasura.SquareImageView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:id="@+id/grid_item_image"
      android:layout_centerInParent="true"
      android:contentDescription="Ingredient"
      android:scaleType="centerCrop"
      android:src="@drawable/default_bg"
       />
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minHeight="50dp"
         android:background="@drawable/overlay_gradient">
         
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="INGREDIENT INFRIGIDER"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/grid_item_title"
       ></TextView>
    
    </RelativeLayout>
    
   
</com.proiect.qmasura.utilitare.NewGridItem>
