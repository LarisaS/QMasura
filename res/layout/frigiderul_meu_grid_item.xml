<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
   >
    
    <com.proiect.qmasura.SquareImageView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:id="@+id/grid_item_image"
      android:layout_centerInParent="true"
      android:contentDescription="Ingredient"
      android:scaleType="centerCrop"
      android:src="@drawable/default_bg"
       />
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minHeight="200dp"
         android:background="@drawable/overlay_gradient">
         
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="INGREDIENT INFRIGIDER"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/grid_item_title"
       ></TextView>
    
    </RelativeLayout>
    
    <TextView android:id="@+id/grid_item_cantitate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:hint="cantitate"
        />
    
    <ImageButton android:id="@+id/grid_item_sterge"
        android:layout_width="30dp"
        android:layout_height="30dp"
     	android:background="@null"
        android:src="@drawable/sterge"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"/>
 
    
</RelativeLayout>
